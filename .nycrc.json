{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "extension": [
    ".ts",
    ".tsx"
  ],
  "exclude": [
    "**/index.ts",
    "**/*.d.ts",
    "**/*.spec.ts",
    "**/*.js"
  ],
  "require": [
    "ts-node/register"
  ],
  "reporter": [
    "text",
    "html"
  ],
  "sourceMap": true,
  "instrument": true,
  "cache": false,
  "all": true
}