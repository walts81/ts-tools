{
  "name": "ts-tools",
  "version": "1.1.1",
  "description": "Typescript/Javascript Tool Library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "gulp",
    "test": "TS_NODE_FILES=true mocha",
    "test:cov": "gulp cleanCoverage && TS_NODE_FILES=true nyc report --reporter=html --reporter=text-summary --reporter=text-lcov mocha | coveralls",
    "lint": "eslint src/**/*.ts --no-ignore",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "Typescript",
    "Javascript",
    "Helpers"
  ],
  "author": "Josh Walters",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/walts81/ts-tools.git"
  },
  "devDependencies": {
    "@types/chai": "^4.1.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^11.12.0",
    "@types/sinon": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "chai": "^4.1.2",
    "coveralls": "^3.1.1",
    "del": "^3.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "sinon": "^7.2.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "moment": "^2.23.0"
  }
}
