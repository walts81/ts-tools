{
  "name": "js-tools",
  "version": "1.0.0",
  "description": "Typescript/Javascript Tool Library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "gulp",
    "test": "TS_NODE_FILES=true mocha",
    "test:cov": "gulp clean-coverage && TS_NODE_FILES=true nyc mocha",
    "lint": "tslint src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm lint",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "Typescript",
    "Javascript",
    "Helpers"
  ],
  "author": "Josh Walters",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^11.12.0",
    "@types/sinon": "^7.0.3",
    "chai": "^4.1.2",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-typescript": "^5.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "sinon": "^7.2.2",
    "source-map-support": "^0.5.9",
    "ts-lint": "^4.5.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "moment": "^2.23.0"
  }
}
